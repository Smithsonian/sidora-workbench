function exhibition_config_save_visibility($pid, $visibility_obj_tree) {
  if (!exhibition_config_allowed_to_edit($pid)) {
    drupal_not_found();
    drupal_exit();
  }
  if (is_string($visibility_obj_tree)) {
    $visibility_string = $visibility_obj_tree;
  }
  else {
    //if the tree is a child array, just take the first element
    if (empty($visibility_obj_tree['pid']) && !empty($visibility_obj_tree[0])){
      $visibility_obj_tree = $visibility_obj_tree[0];
    }
    $visibility_string = json_encode($visibility_obj_tree);
  }
  $exists = db_query('SELECT 1 FROM {exhibition_config} WHERE pid = :pid', array(':pid' => $pid))->fetchField();
  if ($exists) {
    $query = db_update('exhibition_config')
      ->fields(array(
        'visibility' => $visibility_string,
      ))
      ->condition('pid', $pid, '=');
    $num_updated = $query->execute();
    $new_entry = NULL;
  }
  else {
    $fields = 
      array(
        'pid', 
        'visibility', 
      );
    $insert_query = db_insert('exhibition_config')->fields($fields);
    $insert_query->values( 
      array(
        'pid' => $pid,
        'visibility' => $visibility_string,
      )
    );
    $new_entry = $insert_query->execute();
  }
  return TRUE; 
}
function exhibition_config_save_visibility_optimized($visibility_obj_tree) {
  if (empty($visibility_obj_tree)) {
    drupal_not_found();
    drupal_exit();
  }
  $pid = $visibility_obj_tree['pid'];
  if (!exhibition_config_allowed_to_edit($pid)) {
    drupal_not_found();
    drupal_exit();
  }
  $object_visibility = $visibility_obj_tree;
  if (is_string($visibility_obj_tree['visibility'])) {
    $visibility_string = $visibility_obj_tree['visibility'];
  }
  else {
    //if the tree is a child array, just take the first element
    if (!empty($visibility_obj_tree['visibility'])){
      $visibility_obj_tree = $visibility_obj_tree['visibility'];
    }
    $visibility_string = json_encode($visibility_obj_tree);
  }
  if ((!isset($object_visibility['path'])) || (empty($object_visibility['path']))) {
    $query = db_update('exhibition_config_visibility')
       ->fields(array(
         'visibility' => $visibility_string,
       ))
       ->condition('pid', $pid, '=');
  }
  else {       
    $query = db_update('exhibition_config_visibility')
      ->fields(array(
        'visibility' => $visibility_string,
      ))
      ->condition('pid', $pid, '=')
      ->condition('path', $object_visibility['path']);
  }      
  $num_affected = $query->execute();
  if ($num_affected == 0) {
    $fields = 
      array(
        'pid',
        'path', 
        'visibility', 
      );
    $insert_query = db_insert('exhibition_config_visibility')->fields($fields);
    $insert_query->values( 
      array(
        'pid' => $pid,
        'path' => $object_visibility['path'],
        'visibility' => $visibility_string,
      )
    );
    $new_entry = $insert_query->execute();
  }
  return TRUE; 
