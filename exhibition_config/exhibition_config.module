function exhibition_config_get_pid_tree($pid,&$pid_list = array(),$parent = '',$parent_pid = ''){
  require_once ( dirname(__FILE__) . '/exhibition_config.util.inc');
  $to_return = array();
  if (in_array($pid, $pid_list)){
    return $to_return;
  }
  $to_return['pid'] = $pid;
  $repo = si_exhibition_get_repo();
  $object = $repo->getObject($pid);
  $to_return['type'] = 'Concept';
  $to_return['title'] = $object->label;
  if ($parent == '') {
    $to_return['relationship'] = $object->label;
    $to_return['relationship_pid'] = $to_return['pid'];
  }else{
    $to_return['relationship'] = $parent . "\\" . $object->label;
    $to_return['relationship_pid'] = $parent_pid . "\\" . $to_return['pid'];
  } 
  $relationship = $to_return['relationship'];
  $relationship_pid = $to_return['relationship_pid'];
  $to_return['show_name'] = 'false';
  $to_return['show_meta'] = 'false';
  /*$to_return['future_children_show'] = 'false';
  $to_return['future_children_show_meta'] = 'false'; 
  $to_return['future_children_show_preview'] = 'false';
  $to_return['future_children_allow_download'] = 'false';*/
  //$object = $repo->getObject($pid);
  $to_return['children'] = array();
  $pid_list[] = $pid;
  $children = si_exhibition_get_children_info($object);
  foreach($children as $child){
    $child['relationship'] = $relationship . "\\" . $child['title'];
    $child['relationship_pid'] = $relationship_pid . "\\" . $child['pid'];
    if ($child['type'] == 'Concept'){
    //Build the tree from all the children
    //for each child, get their sub-tree
    $to_return['children'][] = exhibition_config_get_pid_tree($child['pid'],$pid_list,$relationship,$relationship_pid);
    }else{
    $child['show_name'] = 'false';
    $child['show_meta'] = 'false';
    $child['show_preview'] = 'false';
    $child['show_preview'] = 'false';
    $child['allow_download'] = 'false';
    $to_return['children'][]= $child;
    }
  }
  return $to_return;
}
function exhibition_config_flatten_tree($child_array, &$rows,$resource_visibility_settings) {
  if (isset($child_array) && sizeof($child_array)) {
  $temp_array = array();
  $tree_depth = substr_count($child_array['relationship'],'\\');
  $indent = '';
  for ($ctr=0;$ctr < $tree_depth; $ctr++) {
    $indent .= '<span class="tree-indent ui-selectee"></span>';
  } 
  if ($child_array['type'] == 'Resource') {
    $indent .= '<span class="tree-indent ui-selectee"></span>';
  }
  $html = '<tr id="' . $child_array['pid'] . '" depth="' . $child_array['relationship_pid'] . '"><td>'.$indent.'<span class ="' . $child_array['type'] . ' ui-selectee"></span>' . $child_array['title'].'</td><td>'.$child_array['type'].'</td><td>'.$child_array['relationship'].'</td>';
  $checkboxes_array = array();
  foreach ($resource_visibility_settings as $setting => $name) {
    $visibility_field_name = $child_array['relationship'].'_' . $setting;
    $visibility_value = (isset($child_array[$setting]) && ($child_array[$setting] == 'true'))?'1':'';
    //if (($child_array['type'] == 'Concept') && (($setting == 'show_preview') || ($setting == 'allow_download'))) {
    //}else{
    $checkboxes_array[$setting] = $visibility_value;
    //}
  } 
    $rows[] = array(
    'pid' => $child_array['pid'],
    'type' => $child_array['type'],
    'relationship' => $child_array['relationship'],
    'depth' => $child_array['relationship_pid'],
    'label' => $child_array['title'],
    'model' =>  (($child_array['type'] == 'Resource')?$child_array['model']:''),
    'prefix' => $html,
    'suffix' => '</tr>',
    'checkboxes' => $checkboxes_array);
    if ((isset($child_array['children'])) && (sizeof($child_array['children']) > 0)) {
      foreach ($child_array['children'] as $child) {
        exhibition_config_flatten_tree($child,$rows,$resource_visibility_settings);
      }
    }
} 
} 
function exhibition_config_display_children($child_array,&$html,$resource_visibility_settings) {
  if (isset($child_array) && sizeof($child_array)) {
  $tree_depth = substr_count($child_array['relationship'],'\\');
  $indent = '';
  for ($ctr=0;$ctr < $tree_depth; $ctr++) {
    $indent .= '<span class="tree-indent ui-selectee"></span>';
  } 
  if ($child_array['type'] == 'Resource') {
    $indent .= '<span class="tree-indent ui-selectee"></span>';
  }
  $html .= '<tr id="' . $child_array['pid'] . '" depth="' . $child_array['relationship_pid'] . '"><td>'.$indent.'<span class ="' . $child_array['type'] . ' ui-selectee"></span>' . $child_array['title'].'</td><td>'.$child_array['type'].'</td><td>'.$child_array['relationship'].'</td>';
  foreach ($resource_visibility_settings as $setting => $name) {
    $visibility_field_name = $child_array['pid'].'_' . $setting;
    if (!isset($child_array[$setting])) {
      $child_array[$setting] = '';
    } 
    $visibility_value = ($child_array[$setting] == 'true')?' checked="checked"':'';
    if (($child_array['type'] == 'Concept') && (($setting == 'show_preview') || ($setting == 'allow_download'))) {
      $html .= '<td class="visibility_checkbox"></td>';
    }else{
      $html .= '<td class="visibility_checkbox"><input type="checkbox" id ="' . $visibility_field_name . '" depth = "' . $child_array['relationship_pid'] . '" name = "' . $setting . '" value ="1"' . $visibility_value . '/></td>';
    }
  }
  $html .= '</tr>';
  if ((isset($child_array['children'])) && (sizeof($child_array['children']) > 0)) {
    foreach ($child_array['children'] as $child) {
      exhibition_config_display_children($child,$html,$resource_visibility_settings);
    }
  }
  }
}   

