function exhibition_config_reset_visibility($parent_pid_path, $pid_that_requires_update) {
  if (!empty($parent_pid_path)) {
    $parent_pid_path .= '_' . $pid_that_requires_update;
  }
  else {
    $parent_pid_path = $pid_that_requires_update;
  }    
    require_once ( dirname(__FILE__) . '/exhibition_config.util.inc');
    $repo = si_exhibition_get_repo();
    $object = $repo->getObject($pid_that_requires_update); 
    $children_info = si_exhibition_get_children_info($object);
    //There are certainly more optimized ways to produce what we want
    //This circuitous route is for ease of entering debugging code in when needed
    $children_of_object = array();
    foreach($children_info as $child){
      $children_of_object[] = $child['pid'];
    }
    $children_of_visibility = array();
    $path_to_pid_array = explode('_',$parent_pid_path);
    $pid = array_pop($path_to_pid_array);
    $path_to_pid = implode('_',$path_to_pid_array);
    $visibility_object_children = exhibition_config_load_visibility_new($pid,$path_to_pid);
    array_push($path_to_pid_array,$pid);
    $path_to_pid = implode('_',$path_to_pid_array);
    $visibility_object_children['children'] = exhibition_config_load_visibility_children($path_to_pid);
    foreach($visibility_object_children['children'] as $child){
      $children_of_visibility[] = $child['pid'];
    }
    $added_child_pids = array_diff($children_of_object, $children_of_visibility);
    $deleted_child_pids = array_diff($children_of_visibility, $children_of_object);
    $to_return_children = array();
    //Add each of the current visibility children that is still a child
    foreach($visibility_object_children['children'] as $vis_obj_child) {
      if (in_array($vis_obj_child['pid'],$deleted_child_pids)) {
        db_delete('exhibition_config_visibility')
           ->condition('pid', $vis_obj_child['pid'], '=')
           ->condition('path', $parent_pid_path, '=')
            ->execute();
      }
    }
    //Add new children to the end of the visibility children array
    foreach($added_child_pids as $curr_child_pid) {
      $curr_child_info = array();
      foreach($children_info as $q_loop_child_info){ 
        if ($curr_child_pid == $q_loop_child_info['pid']) $curr_child_info = $q_loop_child_info;
      }
      $repo = si_exhibition_get_repo();
      $curr_child_object = $repo->getObject($curr_child_pid);
      $models_to_remove = array("fedora-system:FedoraObject-3.0","si:resourceCModel","si:collectionCModel");
      $model_array = array_diff($curr_child_object->models,$models_to_remove);
      $new_vis_obj = array(
        "pid" => $curr_child_info['pid'],
        "label" => $curr_child_info['title'],
        "type" => $curr_child_info['type'],
        "model" => array_pop($model_array),
      );
      if ($curr_child_info['type'] == 'Resource'){
        $new_vis_obj['show_name'] = !(empty($visibility_object_children['future_children_show_name']));
        $new_vis_obj['show_meta'] = !(empty($visibility_object_children['future_children_show_meta']));
        $new_vis_obj['show_preview'] = !(empty($visibility_object_children['future_children_show_preview']));
        $new_vis_obj['allow_download'] = !(empty($visibility_object_children['future_children_allow_download']));
  $new_vis_obj['show_degraded'] = !(empty($visibility_object_children['future_children_show_degraded']));
      }
      if ($curr_child_info['type'] == 'Concept'){
        $new_vis_obj['show_name'] = !(empty($visibility_object_children['future_children_show_name']));
        $new_vis_obj['show_meta'] = !(empty($visibility_object_children['future_children_show_meta']));
        $new_vis_obj['future_children_show_name'] = !(empty($visibility_object_children['future_children_show_name']));
        $new_vis_obj['future_children_show_meta'] = !(empty($visibility_object_children['future_children_show_meta']));
        $new_vis_obj['future_children_show_preview'] = !(empty($visibility_object_children['future_children_show_preview']));
        $new_vis_obj['future_children_allow_download'] = !(empty($visibility_object_children['future_children_allow_download']));
  $new_vis_obj['future_children_show_degraded'] = !(empty($visibility_object_children['future_children_show_degraded']));
      }
      $new_visibility_object = array(
        'pid' => $curr_child_info['pid'],
  'path' => $parent_pid_path,
  'visibility' => $new_vis_obj,
      );  
      exhibition_config_save_visibility_optimized($new_visibility_object);
    }
}


/*
 * returns a visibility object with only objects that have show_name as TRUE
 */
function exhibition_config_filter_visibility_show_name($vis_obj) {
  $to_return = $vis_obj;
  if (empty($to_return['show_name'])){ return FALSE; }
  $new_children = array();
  if (!empty($vis_obj['children'])){
    foreach($vis_obj['children'] as $curr_child) {
      $check_item = exhibition_config_filter_visibility_show_name($curr_child);
      if (!empty($check_item)){
        $new_children[] = $check_item;
      }
    }
    $to_return['children'] = $new_children; 
  }
  return $to_return;
}
