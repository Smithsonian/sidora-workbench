function exhibition_config_get_total_session_pages($array_length,$objects_per_page) {
  $page_array = array();
  if (isset($array_length) && ($array_length > 0)) {
    $total_pages = ceil($array_length / $objects_per_page);
    $start_page = 0;
    $end_page = 0;
    for ($ctr=0;$ctr < $total_pages;$ctr++) {
      $start_page = $end_page+1;
      $end_page = $start_page + 4; // TODO Change
      array_push($page_array,$start_page . '-' . $end_page);
    }
    return $page_array;
  } 
